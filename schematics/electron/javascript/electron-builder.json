{
  "directories": {
    "output": "out/"
  },
  "files": [
      "**/*",
      "!**/*.ts",
      "!**/*.map",
      "!*.code-workspace",
      "!LICENSE.md",
      "!package.json",
      "!package-lock.json",
      "!src/",
      "src/index.html",
      "!e2e/",
      "!hooks/",
      "!angular.json",
      "!_config.yml",
      "!karma.conf.js",
      "!tsconfig.json",
      "!tslint.json"
  ],
  "win": {
    "target": [
      "portable",
      "nsis"
    ]
  },
  "mac": {
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "target": [
      "AppImage"
    ]
  }
}
